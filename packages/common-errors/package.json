{
  "name": "@krimzen-ninja/common-errors",
  "version": "0.3.3",
  "engines": {
    "node": "^10.14.1",
    "npm": ">= 6.4.1"
  },
  "description":
    "A collection of custom common errors that can be used across projects and modules.",
  "files": ["src"],
  "main": "./src/index.js",
  "scripts": {
    "coverage": "npm test -- --coverage",
    "codecov": "codecov",
    "test": "jest",
    "snyk": "snyk test",
    "prettier": "prettier --write \"src/**/*.js\"",
    "lint": "npm run lint-ci -- --fix",
    "lint-ci": "eslint \"src/**/*.js\"",
    "update": "npm-check -Eu",
    "docs": "documentation build src/index.js --github --format md --output \"API.md\"",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "preversion":
      "npm run prettier && npm run lint && npm t && npm run snyk && npm run docs && git add . && git commit -m \"adding build artifacts\"",
    "postpublish": "git push origin master --follow-tags && chandler push"
  },
  "watch": {
    "test": "{src,test}/*.js",
    "lint-ci": "{src,test}/*.js"
  },
  "jest": {
    "testRegex": "/test/.*",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrimZen Ninja/krimzen-ninja-common-errors.git"
  },
  "keywords": ["node", "KrimZen-Ninja"],
  "author": "Ryan Kotzen <potz666@gmail.com> (https://github.com/KrimZen Ninja)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KrimZen Ninja/krimzen-ninja-common-errors/issues"
  },
  "homepage": "https://github.com/KrimZen Ninja/krimzen-ninja-common-errors#readme",
  "devDependencies": {
    "codecov": "^3.0.0",
    "documentation": "9.3.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-jest": "22.3.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "jest-cli": "24.7.1",
    "npm-check": "5.9.0",
    "npm-watch": "0.6.0",
    "prettier": "^1.8.2",
    "snyk": "^1.52.0"
  },
  "dependencies": {
    "debug": "4.1.1"
  }
}
